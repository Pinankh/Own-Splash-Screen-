<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.YourApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Splash screen settings -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowSplashScreenBackground">@color/teal_200</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.YourApp.Main</item>
    </style>

    <style name="Launcher" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <item name="postSplashScreenTheme">@style/Theme.YourApp.Main</item>
    </style>

    <style name="Theme.YourApp.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Main app theme -->
    </style>


</resources>